@model AccountLoginViewModel

<form method="post" action="@Url.Action("Login")">
    <div class="mb-3">
        <label for="name" class="form-label">Email:</label>
        <input type="text" name="@nameof(AccountLoginViewModel.Email)" class="form-control" id="email">
    </div>
    <div class="mb-3">
        <label for="age" class="form-label">Password:</label>
        <input type="password" name="@nameof(AccountLoginViewModel.Password)" class="form-control" id="password">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Add</button>
    </div>
</form>